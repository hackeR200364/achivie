<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F1F39">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/iv_list_tile_native_ad_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circular_bloc_profile_picture"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="ad title"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/gnt_white"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/btn_background"
                    android:bufferType="normal"
                    android:drawableStart="@drawable/ic_mood_24"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:text="See Details"
                    android:textColor="@color/gnt_white"
                    tools:ignore="HardcodedText,RtlSymmetry" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Test"
                android:textColor="#665FF4"
                android:textStyle="bold"
                android:background="@drawable/category_text_background"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="To define the default setting in XML through the Support Library, use the app namespace and set the autoSizeTextType attribute to none or uniform."
                android:textColor="@color/gnt_white"
                android:textSize="17sp"
                android:autoSizeTextType="uniform"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/image_preview_background"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />


        </LinearLayout>
    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>