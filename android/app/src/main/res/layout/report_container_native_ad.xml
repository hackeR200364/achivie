<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F1F39">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"

                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/iv_report_container_native_ad_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circular_bloc_profile_picture"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription,HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_report_container_native_ad_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxWidth="162dp"
                        android:gravity="start"
                        android:text="ad title"
                        android:textColor="@color/gnt_white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        tools:ignore="HardcodedText,RtlHardcoded"
                        tools:targetApi="o" />


                    <TextView
                        android:id="@+id/tv_report_container_native_ad_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:text="Advertiser"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText"
                        tools:targetApi="o" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_report_container_native_ad_see_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="2"
                    android:background="@drawable/btn_background"
                    android:bufferType="normal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="See Details"
                    android:textColor="@color/gnt_white"
                    tools:ignore="HardcodedText,RtlSymmetry" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_report_container_native_ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/category_text_background"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:text="Test"
                android:textColor="#665FF4"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/tv_report_container_native_ad_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="To define the default setting in XML through the Support Library, use the app namespace and set the autoSizeTextType attribute to none or uniform."
                android:textColor="@color/gnt_white"
                android:textSize="17sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_report_container_native_ad_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: "
                    android:textColor="#66FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_report_container_native_ad_rating_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="#66FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_report_container_native_ad_attribution_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Advertisement"
                android:textColor="#66FFFFFF"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/tv_report_container_native_ad_attribution_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Ad"
                android:textColor="#66FFFFFF"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <ImageView
                android:id="@+id/iv_report_container_native_ad_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/image_preview_background"
                tools:ignore="ContentDescription,HardcodedText" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:background="#33645df4" />


        </LinearLayout>

    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>